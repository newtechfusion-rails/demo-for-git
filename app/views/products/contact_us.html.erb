<div class="adminsales">
  <div id="add-deal-location" >
    <div class="contactus">
      <div align ="center"><h1>Contact Us</h1></div>
      <%= form_for(@contact_us, :as =>:products, :url =>"/products/contact_us_user", :id => session[:user_id], :method =>"post") do |f| %>
<div class ="clear"></div>
<label><b>Name:</b></label>
<div class="clear"></div>
<%= f.text_field :name %>
<div class="clear"></div>
