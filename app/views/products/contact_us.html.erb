<div class="clear"></div>
<%= f.email_field :email %>
<div class="clear"></div>
<label><b>Subject:</b></label>
<div class="clear"></div>
<%= f.text_field :subject %>
<div class="clear"></div>
<label><b>Message:</b></label>
